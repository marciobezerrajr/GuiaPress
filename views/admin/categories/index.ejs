<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

      <div class="container">
          <hr>
          <h2>Categorias</h2>
          <a class="btn btn-success" href="/admin/categories/new">Criar nova categoria</a>
          <hr>
          <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <th><%= category.id %></th>
                        <th><%= category.title %></th>
                        <th><%= category.slug %></th>
                        <th>
                            <a class="btn btn-warning" href="/admin/categories/edit/<%= category.id %>">Editar</a>
                            
                            <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                                <input type="hidden" name="id" value="<%= category.id %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </th>
                    </tr>
                <% }) %>
            </tbody>
          </table>
      </div>
<%- include('../../partials/footer') %>

<script>
    //função para confirmar o delete das categorias
    function confirmDelete(event, form){
        event.preventDefault()
        const decision = confirm('Deseja realmente deletar essa categoria?')
        if(decision){
            form.submit()
        }
    }
</script>